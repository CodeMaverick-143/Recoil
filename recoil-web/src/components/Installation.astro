---
import { Apple, Package, Download, Copy, Check } from "lucide-react";
import { WindowsLogo } from "./PlatformIcons";

const releases = {
    version: "0.2.5",
    baseUrl:
        "https://github.com/CodeMaverick-143/recoil/releases/latest/download",
};

interface Platform {
    name: string;
    icon: any;
    color: string;
    formats: { label: string; file: string }[];
    verificationCommand?: string;
    cmdId?: string;
}

const platforms: Platform[] = [
    {
        name: "Windows",
        icon: WindowsLogo,
        color: "text-blue-400",
        formats: [
            { label: "Installer (.exe)", file: "Recoil_0.1.0_x64-setup.exe" },
            { label: "MSI Installer", file: "Recoil_0.1.0_x64_en-US.msi" },
        ],
    },
    {
        name: "Linux",
        icon: Package,
        color: "text-orange-400",
        formats: [
            { label: "Debian (.deb)", file: "Recoil_0.1.0_amd64.deb" },
            { label: "RPM (.rpm)", file: "Recoil-0.1.0-1.x86_64.rpm" },
            { label: "AppImage", file: "Recoil_0.1.0_amd64.AppImage" },
        ],
    },
    {
        name: "macOS",
        icon: Apple,
        color: "text-white",
        formats: [
            { label: "Universal (.dmg)", file: "Recoil_0.1.0_universal.dmg" },
            {
                label: "Universal App (.tar.gz)",
                file: "Recoil_universal.app.tar.gz",
            },
        ],
        verificationCommand: 'xattr -cr "/Applications/Recoil.app"',
        cmdId: "mac-install-cmd",
    },
];
---

<section id="download" class="py-24 bg-slate-900/50 border-y border-white/5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2
                class="text-3xl md:text-4xl font-display font-bold text-white mb-4"
            >
                Install Anywhere
            </h2>
            <p class="text-slate-400 font-body max-w-2xl mx-auto text-lg">
                Native performance on every platform. Choose the format that
                works best for your system.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                platforms.map((platform) => (
                    <div class="bg-white/5 border border-white/10 rounded-xl p-6 hover:border-white/20 transition-colors">
                        <div class="flex items-center gap-3 mb-6">
                            <platform.icon
                                className={`w-6 h-6 ${platform.color}`}
                            />
                            <h3 class="text-xl font-bold text-white font-display">
                                {platform.name}
                            </h3>
                        </div>

                        <div class="space-y-3">
                            {platform.formats.map((format) => (
                                <a
                                    href={`${releases.baseUrl}/${format.file}`}
                                    class="flex items-center justify-between p-3 rounded-lg bg-white/5 hover:bg-white/10 border border-white/5 hover:border-white/10 transition-all font-body group"
                                >
                                    <span class="text-slate-300 group-hover:text-white transition-colors">
                                        {format.label}
                                    </span>
                                    <Download
                                        size={16}
                                        className="text-slate-500 group-hover:text-recoil-red transition-colors"
                                    />
                                </a>
                            ))}
                        </div>

                        {platform.verificationCommand && (
                            <div class="mt-6 pt-6 border-t border-white/5">
                                <div class="flex items-start gap-2 mb-2">
                                    <div class="p-1 rounded bg-amber-500/10 text-amber-400">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="14"
                                            height="14"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        >
                                            <circle cx="12" cy="12" r="10" />
                                            <line
                                                x1="12"
                                                y1="8"
                                                x2="12"
                                                y2="12"
                                            />
                                            <line
                                                x1="12"
                                                y1="16"
                                                x2="12.01"
                                                y2="16"
                                            />
                                        </svg>
                                    </div>
                                    <p class="text-xs text-slate-400 leading-relaxed">
                                        If the app doesn't open, run this in
                                        Terminal:
                                    </p>
                                </div>
                                <div class="relative group/cmd">
                                    <code
                                        id={platform.cmdId}
                                        class="block text-xs font-mono text-amber-100/90 bg-amber-500/10 border border-amber-500/20 p-3 pr-12 rounded-lg select-all break-all"
                                    >
                                        {platform.verificationCommand}
                                    </code>
                                    <button
                                        data-cmd-id={platform.cmdId}
                                        class="copy-install-btn absolute right-2 top-1/2 -translate-y-1/2 p-1.5 rounded-md hover:bg-amber-500/20 text-amber-200/70 hover:text-amber-100 transition-colors bg-amber-500/10 backdrop-blur-sm border border-amber-500/10"
                                        aria-label="Copy command"
                                    >
                                        <span class="icon-copy">
                                            <Copy className="w-3.5 h-3.5" />
                                        </span>
                                        <span class="icon-check hidden text-green-400">
                                            <Check className="w-3.5 h-3.5" />
                                        </span>
                                    </button>
                                </div>
                            </div>
                        )}
                    </div>
                ))
            }
        </div>

        <div class="mt-12 text-center">
            <p class="text-slate-500 text-sm font-mono">
                Latest Version: v{releases.version} â€¢ SHA256 Verification Available
                on GitHub
            </p>
        </div>
    </div>
</section>

<script>
    const copyBtns = document.querySelectorAll(".copy-install-btn");

    copyBtns.forEach((btn) => {
        btn.addEventListener("click", async () => {
            const cmdId = btn.getAttribute("data-cmd-id");
            if (!cmdId) return;

            const cmdCode = document.getElementById(cmdId);
            const iconCopy = btn.querySelector(".icon-copy");
            const iconCheck = btn.querySelector(".icon-check");

            if (!cmdCode) return;

            try {
                await navigator.clipboard.writeText(cmdCode.textContent || "");

                // Show check icon
                iconCopy?.classList.add("hidden");
                iconCheck?.classList.remove("hidden");

                // Revert after 2 seconds
                setTimeout(() => {
                    iconCopy?.classList.remove("hidden");
                    iconCheck?.classList.add("hidden");
                }, 2000);
            } catch (err) {
                console.error("Failed to copy:", err);
            }
        });
    });
</script>
