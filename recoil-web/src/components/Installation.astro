---
import { Apple, Package, Download } from "lucide-react";
import { WindowsLogo } from "./PlatformIcons";

const releases = {
    version: "0.2.5",
    baseUrl:
        "https://github.com/CodeMaverick-143/recoil/releases/latest/download",
};

const platforms = [
    {
        name: "Windows",
        icon: WindowsLogo,
        color: "text-blue-400",
        formats: [
            { label: "Installer (.exe)", file: "Recoil_0.1.0_x64-setup.exe" },
            { label: "MSI Installer", file: "Recoil_0.1.0_x64_en-US.msi" },
        ],
    },
    {
        name: "Linux",
        icon: Package,
        color: "text-orange-400",
        formats: [
            { label: "Debian (.deb)", file: "Recoil_0.1.0_amd64.deb" },
            { label: "RPM (.rpm)", file: "Recoil-0.1.0-1.x86_64.rpm" },
            { label: "AppImage", file: "Recoil_0.1.0_amd64.AppImage" },
        ],
    },
    {
        name: "macOS",
        icon: Apple,
        color: "text-white",
        formats: [
            { label: "Universal (.dmg)", file: "Recoil_0.1.0_universal.dmg" },
            {
                label: "Universal App (.tar.gz)",
                file: "Recoil_universal.app.tar.gz",
            },
        ],
    },
];
---

<section id="download" class="py-24 bg-slate-900/50 border-y border-white/5">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2
                class="text-3xl md:text-4xl font-display font-bold text-white mb-4"
            >
                Install Anywhere
            </h2>
            <p class="text-slate-400 font-body max-w-2xl mx-auto text-lg">
                Native performance on every platform. Choose the format that
                works best for your system.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                platforms.map((platform) => (
                    <div class="bg-white/5 border border-white/10 rounded-xl p-6 hover:border-white/20 transition-colors">
                        <div class="flex items-center gap-3 mb-6">
                            <platform.icon
                                className={`w-6 h-6 ${platform.color}`}
                            />
                            <h3 class="text-xl font-bold text-white font-display">
                                {platform.name}
                            </h3>
                        </div>

                        <div class="space-y-3">
                            {platform.formats.map((format) => (
                                <a
                                    href={`${releases.baseUrl}/${format.file}`}
                                    class="flex items-center justify-between p-3 rounded-lg bg-white/5 hover:bg-white/10 border border-white/5 hover:border-white/10 transition-all font-body group"
                                >
                                    <span class="text-slate-300 group-hover:text-white transition-colors">
                                        {format.label}
                                    </span>
                                    <Download
                                        size={16}
                                        className="text-slate-500 group-hover:text-recoil-red transition-colors"
                                    />
                                </a>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>

        <div class="mt-12 text-center">
            <p class="text-slate-500 text-sm font-mono">
                Latest Version: v{releases.version} â€¢ SHA256 Verification Available
                on GitHub
            </p>
        </div>
    </div>
</section>
